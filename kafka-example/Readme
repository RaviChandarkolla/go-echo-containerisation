# Find your Kafka container name/ID
docker ps | grep kafka

# Exec into it (replace <container_name> with yours)
docker exec -it <kafka_container_name> bash
docker exec -it 653b0dd1f719786b3fbdd177ede886b6f21ca34854fbaf46b38c28e60d6c3332 bash

# INSIDE Kafka container
/opt/kafka/bin/kafka-topics.sh --create --topic tea_orders --partitions 6 --replication-factor 1 --bootstrap-server localhost:9092